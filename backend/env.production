# ZIDIOConnect Backend - Production Environment
# This file contains production-specific environment variables

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# ===========================================
# DATABASE CONFIGURATION (MySQL for production)
# ===========================================
DB_URL=jdbc:mysql://localhost:3306/zidioconnect?useSSL=true&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=zidioconnect_user
DB_PASSWORD=secure_production_password_here
DB_DRIVER=com.mysql.cj.jdbc.Driver

# ===========================================
# JWT CONFIGURATION (Production - Use strong secret)
# ===========================================
JWT_SECRET=productionSecretKey123456789012345678901234567890123456789012345678901234567890
JWT_EXPIRATION=86400000

# ===========================================
# EMAIL CONFIGURATION (Production)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=production@zidioconnect.com
MAIL_PASSWORD=production_app_password_here
MAIL_FROM=noreply@zidioconnect.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
FILE_UPLOAD_DIR=/var/uploads/
FILE_RESUME_DIR=/var/uploads/resumes/
FILE_EXCEL_DIR=/var/uploads/excel/
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ===========================================
# CORS CONFIGURATION (Production)
# ===========================================
CORS_ALLOWED_ORIGINS=https://zidioconnect.vercel.app,https://www.zidioconnect.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# LOGGING CONFIGURATION (Production)
# ===========================================
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO
LOG_LEVEL_SECURITY=WARN

# ===========================================
# AI/ML CONFIGURATION (Production)
# ===========================================
AI_MATCHING_ENABLED=true
AI_MATCHING_ALGORITHM=advanced-ml
AI_MATCHING_CONFIDENCE_THRESHOLD=0.8
AI_ANALYTICS_ENABLED=true
AI_ANALYTICS_REAL_TIME=true
AI_ANALYTICS_PREDICTION_INTERVAL=24h

# ===========================================
# SECURITY CONFIGURATION (Production)
# ===========================================
BCRYPT_STRENGTH=12
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=900

# ===========================================
# EXTERNAL SERVICES (Production)
# ===========================================
# OPENAI_API_KEY=your_production_openai_api_key
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
